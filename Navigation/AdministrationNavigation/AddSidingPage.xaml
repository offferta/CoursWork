<Page x:Class="Coursework.AdministrationNavigation.AddSidingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="AddSidingPage" Height="1000" Width="1400">
    <Grid>
    <Grid.RowDefinitions>
        <RowDefinition Height="50" />
        <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="70"/>
        <ColumnDefinition />
        <ColumnDefinition />
        <ColumnDefinition/>
        <ColumnDefinition />
        <ColumnDefinition />
        <ColumnDefinition Width="70"/>
    </Grid.ColumnDefinitions>

    <Label Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="0" Content="Добавление нового сайдинга" FontSize="28" VerticalAlignment="Center"/>
    <Border Grid.Column="1" Grid.ColumnSpan="6" Grid.Row="1" Grid.RowSpan="5" BorderBrush="Black" BorderThickness="3" Background="WhiteSmoke"></Border>
    <DockPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Margin="10">
        <StackPanel>
            <Label Content="Введите название сайдинга:" FontSize="18"/>
            <TextBox x:Name="TitleTextBox" Width="200" Height="30" Margin="0,0,0,10"/>
            <Label Content="Заполните описание товара:" FontSize="18"/>
            <TextBox x:Name="DescriptionTextBox" Width="200" Height="60" Margin="0,0,0,10" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
            <Label Content="Укажите цену :" FontSize="18"/>
            <TextBox x:Name="PriceTextBox" Width="200" Height="30" Margin="0,0,0,10"/>
            <Button x:Name="BrowseImage" Click="BrowseImage_OnClick" Content="Загрузить изображение" Width="150" Height="30" HorizontalAlignment="Left"/>
            <Image x:Name="SelectedImage" Stretch="Uniform" Width="300" Height="300" />
            <Button x:Name="Add" Click="AddButton_OnClick" Content="Add Material" Width="150" Height="30" Margin="0,10,0,0"/>
        </StackPanel>
    </DockPanel>
    
    <DockPanel Grid.Column="4" Grid.Row="1" Margin="10">
        <StackPanel>
            <Label Content="Введите ширину:" FontSize="18"/>
            <TextBox x:Name="WidthTextBox" Width="200" Height="30" Margin="0,0,0,10"/>
            <Label Content="Введите длину:" FontSize="18"/>
            <TextBox x:Name="LengthTextBox" Width="200" Height="30" Margin="0,0,0,10"/>
            <Label Content="Введите цвет:" FontSize="18"/>
            <TextBox x:Name="ColorTextBox" Width="200" Height="30" Margin="0,0,0,10"/>
            <Label Content="Введите толщину:" FontSize="18"/>
            <TextBox x:Name="ThicknessTextBox" Width="200" Height="30" Margin="0,0,0,10"/>
        </StackPanel>
    </DockPanel>
</Grid>


</Page>