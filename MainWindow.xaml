<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="10">
            <Label Content="Title:"/>
            <TextBox x:Name="TitleTextBox" Width="200"/>
            <Label Content="Description:"/>
            <TextBox x:Name="DescriptionTextBox" Width="200"/>
            <Label Content="Price:"/>
            <TextBox x:Name="PriceTextBox" Width="200"/>
            <Button x:Name="BrowseImage" Click="BrowseImage_OnClick" Content="Browse Image" Margin="0,10,0,0"/>
            <Image x:Name="SelectedImage" Stretch="Uniform" Width="200" Height="200"/>
        </StackPanel>
        <Button x:Name="AddButton" Click="AddButton_OnClick" Content="Add Material" Grid.Row="1"   Width="100" Height="30" Margin="10"/>
    </Grid>
</Window>
